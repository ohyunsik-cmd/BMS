  "devDependencies": {
    "eslint": "^8.50.0",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/bms-websocket-server.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/bms-websocket-server/issues"
